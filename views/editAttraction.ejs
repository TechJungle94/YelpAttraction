<%- include('partials/header') %>

<div class='container'>
	<h1 style='text-align: center'>
				Edit the Attraction: <%= theAttraction.name%>
	</h1>
	<div style='width: 30%; margin: 40px auto'>
		<form action='/attractions/<%= theAttraction._id %>?_method=PUT' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= theAttraction.name %>' name='attraction[name]'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= theAttraction.image %>' name='attraction[image]'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' value='<%= theAttraction.description %>' name='attraction[description]'>
			</div>
			<div class='form-group'>
				<button class='btn btn-default btn-lg btn-block'>
					Submit
				</button>
			</div>
		</form>
		<a href='/attractions'>Back </a>
	</div>
</div>

<%- include('partials/footer') %>