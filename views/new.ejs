<%- include('partials/header') %>

<div class='container'>
	<h1 style='text-align: center'>
		Create a new attraction
	</h1>
	<div style='width: 30%; margin: 40px auto'>
		<form method='POST' action='/attractions'>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Attraction Name' name='name'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Image URL' name='image'>
			</div>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Description' name='description'>
			</div>
			<div class='form-group'>
				<button class='btn btn-default btn-lg btn-block'>
					Submit
				</button>
			</div>
		</form>
		<a href='/attractions'>Back </a>
	</div>
</div>

<%- include('partials/footer') %>