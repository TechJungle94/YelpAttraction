<%- include('partials/header') %>
<div class='container'>
	<h1 style='text-align: center'>
		Add New Comment to <%= attraction.name%>
	</h1>
	<div style='width: 30%; margin: 40px auto'>
		<form method='POST' action='/attractions/<%= attraction._id%>/comments'>
			<div class='form-group'>
				<input class='form-control' type='text' placeholder='Write down your comment' name='comment[text]'>
			</div>
			<div class='form-group'>
				<button class='btn btn-default btn-lg btn-block'>
					Submit
				</button>
			</div>
		</form>
		<a href='/attractions/<%= attraction._id%>/comments'>Back </a>
	</div>
</div>
<%- include('partials/footer') %>